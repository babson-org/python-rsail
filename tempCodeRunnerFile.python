txt = 'Enter an even number between 1 and 10: '
while True:
    try:
        num = int(input(txt))
    except ValueError:
        print('no text allowed, try again')
    else:
        if num % 2 != 0:
            print('enter even number, try again')
        elif num < 1 or num > 10:
            print('Enter a integer between 1 and 10')
        else:
            break